{
    "name": "dn_intro",
    "version": "3.1.1-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "keywords": [
        "driver",
        "intro"
    ],
    "icon": {},
    "dependencies": {
        "driver": "1.3.1"
    },
    "components": [
        {
            "name": "TourClickTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "tourClickTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-help",
                "toolRole": "toolset",
                "clickHandler": "startTour"
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_intro.Tour"
                }
            ]
        },
        {
            "name": "Tour",
            "provides": [
                "dn_intro.Tour"
            ],
            "propertiesConstructor": true,
            "properties": {
                "steps": [],
                "showProgress": true,
                "showIntroOnlyOnce": true,
                "startIntroOnStartup": true,
                "disableActiveInteraction": true
            },
            "references": [
                {
                    "name": "actionFactory",
                    "providing": "dn_intro.ActionFactory"
                },
                {
					"name": "_mapWidgetModel",
					"providing": "map-widget.MapWidgetModel"
				}
            ]
        },
        {
            "name": "ActionFactory",
            "provides": [
                "dn_intro.ActionFactory"
            ],
            "references": [
                {
                    "name": "tools",
                    "providing": "ct.tools.Tool",
                    "cardinality": "0..n"
                }
            ]
        }
    ]
}
