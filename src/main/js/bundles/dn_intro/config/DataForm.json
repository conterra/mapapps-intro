{
  "dataform-version": "1.0.0",
  "type": "gridpanel",
  "showLabels": true,
  "children": [
    {
      "type": "checkbox",
      "field": "startIntroOnStartup",
      "title": "${startIntroOnStartup.title}",
      "tooltip": "${startIntroOnStartup.description}",
      "required": true
    },
    {
      "type": "numberspinner",
      "field": "bubbleWidth",
      "title": "${bubbleWidth.title}",
      "tooltip": "${bubbleWidth.description}",
      "required": true
    },
    {
      "type": "numberspinner",
      "field": "bubblePadding",
      "title": "${bubblePadding.title}",
      "tooltip": "${bubblePadding.description}",
      "required": true
    },
    {
      "type": "checkbox",
      "field": "smoothScroll",
      "title": "${smoothScroll.title}",
      "tooltip": "${smoothScroll.description}",
      "required": true
    },
    {
      "type": "numberspinner",
      "field": "scrollDuration",
      "title": "${scrollDuration.title}",
      "tooltip": "${scrollDuration.description}",
      "required": true
    },
    {
      "type": "numberspinner",
      "field": "scrollTopMargin",
      "title": "${scrollTopMargin.title}",
      "tooltip": "${scrollTopMargin.description}",
      "required": true
    },
    {
      "type": "checkbox",
      "field": "showCloseButton",
      "title": "${showCloseButton.title}",
      "tooltip": "${showCloseButton.description}",
      "required": true
    },
    {
      "type": "checkbox",
      "field": "showPrevButton",
      "title": "${showPrevButton.title}",
      "tooltip": "${showPrevButton.description}",
      "required": true
    },
    {
      "type": "checkbox",
      "field": "showNextButton",
      "title": "${showNextButton.title}",
      "tooltip": "${showNextButton.description}",
      "required": true
    },
    {
      "type": "numberspinner",
      "field": "arrowWidth",
      "title": "${arrowWidth.title}",
      "tooltip": "${arrowWidth.description}",
      "required": true
    },
    {
      "type": "checkbox",
      "field": "skipIfNoElement",
      "title": "${skipIfNoElement.title}",
      "tooltip": "${skipIfNoElement.description}",
      "required": true
    },
    {
      "type": "checkbox",
      "field": "nextOnTargetClick",
      "title": "${nextOnTargetClick.title}",
      "tooltip": "${nextOnTargetClick.description}",
      "required": true
    },
    {
      "type": "textarea",
      "field": "steps",
      "title": "${steps.title}",
      "tooltip": "${steps.description}",
      "required": true,
      "size": {
        "w": 300,
        "h": 200
      }
    }
  ]
}