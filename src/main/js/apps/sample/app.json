{
    "properties": {
        "title": "${apptitle}",
        "amdPackages": "apprt@^4.x"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system@^4.x",
            "agssearch@^4.x",
            "appsoverview@^4.x",
            "banner@^4.x",
            "basemaptoggler@^4.x",
            "console@^4.x",
            "coordinateviewer@^4.x",
            "custominfo@^4.x",
            "languagetoggler@^4.x",
            "legend@^4.x",
            "mapflow@^4.x",
            "notifier@^4.x",
            "omnisearch@^4.x",
            "parametermanager@^4.x",
            "printing@^4.x",
            "splashscreen@^4.x",
            "templatelayout@^4.x",
            "template-seasons@^4.x",
            "theme-everlasting@^4.x",
            "theme-winter@^4.x",
            "theme-spring@^4.x",
            "theme-summer@^4.x",
            "theme-autumn@^4.x",
            "map-init@^4.x",
            "map-preload-2D@^4.x",
            "map-preload-3D@^4.x",
            "toolset@^4.x",
            "viewmodeswitcher@^4.x",
            "dn_intro",
            "wizard"
        ],
        "require": [
            "${app}/app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "dn_intro": {
            "UserIntro": {
                "startIntroOnStartup": true,
                "bubbleWidth": 280,
                "bubblePadding": 15,
                "smoothScroll": true,
                "scrollDuration": 1000,
                "scrollTopMargin": 200,
                "showCloseButton": true,
                "showPrevButton": true,
                "showNextButton": true,
                "arrowWidth": 20,
                "skipIfNoElement": true,
                "nextOnTargetClick": false,
                "i18n": {
                    "nextBtn": "${intro.next}",
                    "prevBtn": "${intro.back}",
                    "doneBtn": "${intro.done}",
                    "skipBtn": "${intro.skip}",
                    "closeTooltip": "${intro.closeTooltip}",
                    "stepNums": []
                },
                "steps": [
                    {
                        "target": ".mainMap",
                        "placement": "top",
                        "title": "${intro.familiarise.title}",
                        "content": "${intro.familiarise.content}",
                        "width": 280,
                        "padding": 15,
                        "xOffset": "center",
                        "yOffset": "center",
                        "arrowOffset": "center",
                        "delay": 0,
                        "zindex": 0,
                        "showNextButton": true,
                        "showPrevButton": true,
                        "showCTAButton": false,
                        "ctaLabel": "",
                        "multipage": false,
                        "showSkip": false,
                        "fixedElement": false,
                        "nextOnTargetClick": false
                    },
                    {
                        "target": ".mapview_tools",
                        "placement": "left",
                        "title": "${intro.mapviewTools.title}",
                        "content": "${intro.mapviewTools.content}",
                        "toolId": "my_toolset"
                    },
                    {
                        "target": ".omnisearch",
                        "placement": "right",
                        "title": "${intro.omnisearch.title}",
                        "content": "${intro.omnisearch.content}",
                        "yOffset": -12
                    },
                    {
                        "target": ".ctTool_mapflowToggleTool",
                        "placement": "top",
                        "title": "${intro.mapflow.title}",
                        "content": "${intro.mapflow.content}"
                    },
                    {
                        "target": ".ctMapFlow",
                        "placement": "top",
                        "title": "${intro.mapflowTool.title}",
                        "toolId": "mapflowToggleTool"
                    },
                    {
                        "target": ".ctTool_legendToggleTool",
                        "placement": "top",
                        "title": "${intro.legend.title}",
                        "content": "${intro.legend.content}"
                    },
                    {
                        "target": ".esri-legend__service",
                        "placement": "top",
                        "title": "${intro.legend.title}",
                        "content": "${intro.legend.content}",
                        "toolId": "legendToggleTool"
                    },
                    {
                        "target": ".themeSelector",
                        "placement": "bottom",
                        "title": "${intro.theme.title}",
                        "content": "${intro.theme.content}"
                    },
                    {
                        "target": ".languageToggler",
                        "placement": "bottom",
                        "title": "${intro.language.title}",
                        "content": "${intro.language.content}",
                        "xOffset": -220,
                        "arrowOffset": 260
                    },
                    {
                        "target": ".mainMap",
                        "placement": "top",
                        "title": "${intro.featureinfo.title}",
                        "content": "${intro.featureinfo.content}",
                        "xOffset": "center",
                        "yOffset": "center",
                        "arrowOffset": "center"
                    }
                ]
            }
        },
        "agssearch": {
            "AGSStore": [
                {
                    "id": "store01",
                    "title": "${search.title}",
                    "url": "https://services.conterra.de/arcgis/rest/services/common/koeln_adressen/MapServer/0",
                    "omniSearchSearchAttr": "ADRESSE",
                    "omniSearchDefaultLabel": "${common.address}",
                    "enablePagination": true,
                    "omniSearchPageSize": 10
                }
            ],
            "AutoStoreRegistration": {
                "componentEnabled": true
            }
        },
        "appsoverview": {
            "RedirectToApp": {
                "openWindow": false
            }
        },
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "imagePosition": "above",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "link": "https://www.conterra.de"
            }
        },
        "basemaptoggler": {
            "Config": {
                "itemStyles": {
                    "esri_street": "icon-thumbnail",
                    "esri_topo": "icon-thumbnail",
                    "esri_hybrid": "icon-thumbnail"
                }
            }
        },
        "coordinateviewer": {
            "Config": {
                "decimalPlaces": 3,
                "showScale": true,
                "showCoordinates": true,
                "degreeFormat": true,
                "transformSrs": true,
                "targetSrs": "WGS84"
            }
        },
        "custominfo": {
            "CustomInfoToggleTool": [
                {
                    "widgetSettings": {
                        "content": "${custominfo.imprint.content}",
                        "window": {
                            "marginBox": {
                                "w": 320,
                                "h": 500
                            },
                            "draggable": true,
                            "closable": true,
                            "modal": true,
                            "maximizable": false,
                            "resizable": true,
                            "title": "${custominfo.imprint.title}"
                        }
                    },
                    "type": "IMPRINT",
                    "toolClass": "ctInfo",
                    "title": "${custominfo.imprint.title}",
                    "tooltip": "${custominfo.imprint.tooltip}",
                    "iconClass": "icon-custom-info-imprint",
                    "togglable": true,
                    "id": "IMPRINT_Imprint_CustomInfoTool"
                },
                {
                    "widgetSettings": {
                        "content": "${custominfo.imprint.content}",
                        "window": {
                            "marginBox": {
                                "w": "100%",
                                "h": "100%"
                            },
                            "draggable": false,
                            "closable": true,
                            "maximizable": false,
                            "resizable": false,
                            "title": "${custominfo.imprint.title}"
                        }
                    },
                    "type": "IMPRINT",
                    "toolClass": "ctInfo",
                    "title": "${custominfo.imprint.title}",
                    "tooltip": "${custominfo.imprint.tooltip}",
                    "iconClass": "icon-custom-info-imprint",
                    "togglable": true,
                    "id": "IMPRINT_Imprint_CustomInfoTool_mobile"
                }
            ]
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "esri_street",
                        "title": "${map.basemaps.street}",
                        "thumbnailUrl": "resource('${app}:/images/streets.png')",
                        "basemap": "streets-relief-vector",
                        "selected": true
                    },
                    {
                        "id": "esri_hybrid",
                        "title": "${map.basemaps.hybrid}",
                        "thumbnailUrl": "resource('${app}:/images/hybrid.png')",
                        "basemap": "hybrid"
                    },
                    {
                        "id": "esri_topo",
                        "title": "${map.basemaps.topo}",
                        "thumbnailUrl": "resource('${app}:/images/topo.png')",
                        "basemap": {
                            "type": "GROUP",
                            "layers": [
                                {
                                    "id": "esri_topo1",
                                    "type": "AGS_TILED",
                                    "url": "https://services.arcgisonline.com/arcgis/rest/services/Elevation/World_Hillshade/MapServer"
                                },
                                {
                                    "id": "esri_topo2",
                                    "type": "AGS_VECTORTILE",
                                    "url": "http://www.arcgis.com/sharing/rest/content/items/6f65bc1351b7411588a8cb43fe23dad7/resources/styles/root.json"
                                }
                            ]
                        }
                    }
                ],
                "map": {
                    "layers": [
                        {
                            "id": "koeln1",
                            "title": "${map.koeln1.title}",
                            "url": "https://services.conterra.de/arcgis/rest/services/common/koeln/MapServer",
                            "coverImage": "resource('${app}:/images/mapflow_gi.png')",
                            "type": "AGS_DYNAMIC",
                            "visible": false,
                            "sublayers": [
                                {
                                    "title": "${map.koeln1.districts.title}",
                                    "id": 11,
                                    "opacity": 0.5,
                                    "popupTemplate": {
                                        "title": "{STV_NAME}",
                                        "content": [
                                            {
                                                "type": "text",
                                                "text": "${map.koeln1.districts.text}"
                                            },
                                            {
                                                "type": "fields",
                                                "fieldInfos": [
                                                    {
                                                        "fieldName": "STV_NR",
                                                        "label": "${common.number}"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                },
                                {
                                    "title": "${map.koeln1.boroughs.title}",
                                    "id": 10,
                                    "opacity": 0.5,
                                    "popupTemplate": {
                                        "title": "{NAME}",
                                        "content": [
                                            {
                                                "type": "text",
                                                "text": "${map.koeln1.boroughs.text}"
                                            },
                                            {
                                                "type": "fields",
                                                "fieldInfos": [
                                                    {
                                                        "fieldName": "expression/area",
                                                        "format": {
                                                            "places": 2,
                                                            "digitSeparator": true
                                                        }
                                                    },
                                                    {
                                                        "fieldName": "expression/area-rel",
                                                        "format": {
                                                            "places": 2,
                                                            "digitSeparator": true
                                                        }
                                                    },
                                                    {
                                                        "fieldName": "NUMMER",
                                                        "label": "${common.number}"
                                                    }
                                                ]
                                            }
                                        ],
                                        "expressionInfos": [
                                            {
                                                "name": "area",
                                                "title": "${common.area}",
                                                "expression": "$feature.FLAECHE / 10000"
                                            },
                                            {
                                                "name": "area-rel",
                                                "title": "${common.totalArea}",
                                                "expression": "Round(($feature.FLAECHE / 405020000)*100,2)"
                                            }
                                        ]
                                    }
                                },
                                {
                                    "title": "${map.koeln1.precints.title}",
                                    "id": 9,
                                    "opacity": 0.5,
                                    "popupTemplate": {
                                        "title": "{NAME}",
                                        "content": [
                                            {
                                                "type": "text",
                                                "text": "${map.koeln1.precints.text}"
                                            },
                                            {
                                                "type": "fields",
                                                "fieldInfos": [
                                                    {
                                                        "fieldName": "expression/area",
                                                        "format": {
                                                            "places": 2,
                                                            "digitSeparator": true
                                                        }
                                                    },
                                                    {
                                                        "fieldName": "expression/area-rel",
                                                        "format": {
                                                            "places": 2,
                                                            "digitSeparator": true
                                                        }
                                                    },
                                                    {
                                                        "fieldName": "NUMMER",
                                                        "label": "${common.number}"
                                                    }
                                                ]
                                            }
                                        ],
                                        "expressionInfos": [
                                            {
                                                "name": "area",
                                                "title": "${common.area}",
                                                "expression": "$feature.FLAECHE / 10000"
                                            },
                                            {
                                                "name": "area-rel",
                                                "title": "${common.totalArea}",
                                                "expression": "Round(($feature.FLAECHE / 405020000)*100,2)"
                                            }
                                        ]
                                    }
                                }
                            ]
                        },
                        {
                            "id": "koeln2",
                            "title": "${map.koeln2.title}",
                            "url": "https://services.conterra.de/arcgis/rest/services/common/koeln/MapServer",
                            "coverImage": "resource('${app}:/images/mapflow_education.png')",
                            "type": "AGS_DYNAMIC",
                            "visible": false,
                            "sublayers": [
                                {
                                    "title": "${map.koeln2.libraries.title}",
                                    "id": 7,
                                    "popupTemplate": {
                                        "title": "{NAME}",
                                        "content": [
                                            {
                                                "type": "fields",
                                                "fieldInfos": [
                                                    {
                                                        "fieldName": "NAME_LANG",
                                                        "label": "${common.name}"
                                                    },
                                                    {
                                                        "fieldName": "ADRESSE",
                                                        "label": "${common.address}"
                                                    },
                                                    {
                                                        "fieldName": "TRAEGER",
                                                        "label": "${common.provider}"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                },
                                {
                                    "title": "${map.koeln2.museums.title}",
                                    "id": 6,
                                    "popupTemplate": {
                                        "title": "Museum",
                                        "content": [
                                            {
                                                "type": "text",
                                                "text": "${map.koeln2.museums.text}"
                                            },
                                            {
                                                "type": "fields",
                                                "fieldInfos": [
                                                    {
                                                        "fieldName": "ADRESSE",
                                                        "label": "${common.address}"
                                                    },
                                                    {
                                                        "fieldName": "STADTBEZIR",
                                                        "label": "${common.precint}"
                                                    },
                                                    {
                                                        "fieldName": "HYPERLINK",
                                                        "label": "${common.furtherinfo}"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                },
                                {
                                    "title": "${map.koeln2.schools.title}",
                                    "id": 5,
                                    "popupTemplate": {
                                        "title": "{NAME}",
                                        "content": [
                                            {
                                                "type": "fields",
                                                "fieldInfos": [
                                                    {
                                                        "fieldName": "SCHULNAME",
                                                        "label": "${common.name}"
                                                    },
                                                    {
                                                        "fieldName": "ADRESSE",
                                                        "label": "${common.address}"
                                                    },
                                                    {
                                                        "fieldName": "TRAEGER",
                                                        "label": "${common.provider}"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                }
                            ]
                        },
                        {
                            "id": "koeln3",
                            "title": "${map.koeln3.title}",
                            "url": "https://services.conterra.de/arcgis/rest/services/common/koeln/MapServer",
                            "coverImage": "resource('${app}:/images/mapflow_leisure.png')",
                            "type": "AGS_DYNAMIC",
                            "visible": true,
                            "sublayers": [
                                {
                                    "title": "${map.koeln3.sights.title}",
                                    "id": 3,
                                    "popupTemplate": {
                                        "title": "${map.koeln3.sights.titleSingle}",
                                        "content": [
                                            {
                                                "type": "text",
                                                "text": "${map.koeln3.sights.text}"
                                            },
                                            {
                                                "type": "fields",
                                                "fieldInfos": [
                                                    {
                                                        "fieldName": "ADRESSE",
                                                        "label": "${common.address}"
                                                    },
                                                    {
                                                        "fieldName": "STADTBEZIRK",
                                                        "label": "${common.precint}"
                                                    },
                                                    {
                                                        "fieldName": "HYPERLINK",
                                                        "label": "${common.furtherinfo}"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                },
                                {
                                    "title": "${map.koeln3.playgrounds.title}",
                                    "id": 2,
                                    "visible": false,
                                    "popupTemplate": {
                                        "title": "{Typ}",
                                        "content": [
                                            {
                                                "type": "text",
                                                "text": "${map.koeln3.playgrounds.text}"
                                            },
                                            {
                                                "type": "fields",
                                                "fieldInfos": [
                                                    {
                                                        "fieldName": "Basketballk\u00F6rbe",
                                                        "label": "${map.koeln3.playgrounds.baskets}"
                                                    },
                                                    {
                                                        "fieldName": "Fussballtore",
                                                        "label": "${map.koeln3.playgrounds.goals}"
                                                    },
                                                    {
                                                        "fieldName": "Tischtennis_Tische",
                                                        "label": "${map.koeln3.playgrounds.tables}"
                                                    },
                                                    {
                                                        "fieldName": "Torwand",
                                                        "label": "${map.koeln3.playgrounds.walls}"
                                                    },
                                                    {
                                                        "fieldName": "Skaten",
                                                        "label": "${map.koeln3.playgrounds.skate}"
                                                    },
                                                    {
                                                        "fieldName": "Sonstiges",
                                                        "label": "${map.koeln3.playgrounds.misc}"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                },
                                {
                                    "title": "${map.koeln3.places.title}",
                                    "id": 1,
                                    "popupTemplate": {
                                        "title": "${map.koeln3.places.titleSingle}",
                                        "content": [
                                            {
                                                "type": "text",
                                                "text": "${map.koeln3.places.text}"
                                            },
                                            {
                                                "type": "fields",
                                                "fieldInfos": [
                                                    {
                                                        "fieldName": "ADRESSE",
                                                        "label": "${common.address}"
                                                    },
                                                    {
                                                        "fieldName": "STADTVIERT",
                                                        "label": "${common.district}"
                                                    },
                                                    {
                                                        "fieldName": "HYPERLINK",
                                                        "label": "${common.furtherinfo}"
                                                    }
                                                ]
                                            }
                                        ],
                                        "expressionInfos": [
                                            {
                                                "name": "carrier",
                                                "expression": "IIf($feature.TRAEGER == \"Privat\", \"${common.private}\", \"${common.municipal}\")"
                                            }
                                        ]
                                    }
                                }
                            ]
                        }
                    ],
                    "ground": {
                        "url": "https://elevation3d.arcgis.com/arcgis/rest/services/WorldElevation3D/Terrain3D/ImageServer",
                        "type": "AGS_ELEVATION"
                    }
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 753914,
                        "ymin": 6590000,
                        "xmax": 797273,
                        "ymax": 6635000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "mapflow": {
            "MapFlow": {
                "singleSelectionMode": false,
                "autoFlipActiveCover": true
            }
        },
        "themes": {
            "ThemeModel": {
                "_selectedTheme": "everlasting"
            },
            "ThemeSelector": {
                "componentEnabled": true
            }
        },
        "templates": {
            "TemplateModel": {
                "_templates": [
                    {
                        "name": "seasons",
                        "widgets": []
                    }
                ]
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "introImmediateTool",
                            "printingToggleTool",
                            "urlEncoder",
                            "appsOverviewToggleTool",
                            "viewmodeSwitcherTool",
                            "IMPRINT_Imprint_CustomInfoTool",
                            "IMPRINT_Imprint_CustomInfoTool_mobile"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    },
                    {
                        "id": "my_toolset",
                        "tools": [
                            "printingToggleTool"
                        ],
                        "container": "map",
                        "position": {
                            "rel_t": 300,
                            "rel_r": 20
                        },
                        "registerTool": true,
                        "togglable": true,
                        "windowType": "dropdown"
                    }
                ]
            }
        },
        "toolrules": {
            "ToolRuleManager": {
                "_rules": {
                    "viewmodeSwitcherTool": {
                        "ruleSuccessProperty": "visibility",
                        "not": {
                            "subLayoutNames": [
                                "mobile_portrait",
                                "mobile_landscape",
                                "tablet_portrait",
                                "tablet_landscape"
                            ]
                        }
                    },
                    "IMPRINT_Imprint_CustomInfoTool": {
                        "ruleSuccessProperty": "visibility",
                        "not": {
                            "subLayoutNames": [
                                "mobile_portrait",
                                "mobile_landscape",
                                "tablet_portrait",
                                "tablet_landscape"
                            ]
                        }
                    },
                    "IMPRINT_Imprint_CustomInfoTool_mobile": {
                        "ruleSuccessProperty": "visibility",
                        "not": {
                            "subLayoutNames": [
                                "desktop"
                            ]
                        }
                    }
                }
            }
        }
    }
}
